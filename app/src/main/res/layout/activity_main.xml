<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <Button
                android:text="Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prak2" app:layout_constraintEnd_toStartOf="@+id/prak3" android:layout_marginEnd="31dp"
                android:layout_marginStart="31dp" app:layout_constraintStart_toEndOf="@+id/prak1"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/roboto" style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
                android:text="Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prak1" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="43dp" android:fontFamily="@font/roboto"
                style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
                android:text="Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prak3" android:layout_marginEnd="43dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto" style="@style/Widget.AppCompat.Button.Colored"/>
        <EditText
                android:layout_width="231dp"
                android:layout_height="46dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/number"
                android:fontFamily="@font/roboto" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/prak2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp" android:hint="number"/>
        <EditText
                android:layout_width="231dp"
                android:layout_height="46dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/brand"
                android:fontFamily="@font/roboto" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/number" android:hint="brand"/>
        <EditText
                android:layout_width="231dp"
                android:layout_height="46dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name"
                android:fontFamily="@font/roboto"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/brand" android:hint="name"/>
        <TextView
                android:text="Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:fontFamily="@font/roboto" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/prak1"
        />
        <TextView
                android:text="Brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp" android:layout_marginTop="77dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
        />
        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp" app:layout_constraintBaseline_toBaselineOf="@+id/name"
        />
        <Button
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="75dp" style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
                android:text="Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="75dp" style="@style/Widget.AppCompat.Button.Colored"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
